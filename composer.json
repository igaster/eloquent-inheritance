{
    "name": "igaster/eloquent-inheritance",
	"description": "Use a One-To-One (or One-To-Many) relation between a parent & child Tables to simulate inheritance Model inheritance",
    "keywords": ["laravel-5.x", "table inheritance", "eloquent inheritance", "multiple table inheritance"],
    "license": "MIT",
    "homepage": "https://github.com/igaster/eloquent-inheritance.git",
    "authors": [
        {
            "name": "Giannis Gasteratos",
            "email": "igasteratos@gmail.com"
        }
    ],	
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "5.*"
    },
    "require-dev": {
        "illuminate/database": "~5.2",
        "orchestra/testbench": "~3.0", 
        "vlucas/phpdotenv": "~2.0",
        "phpunit/phpunit": "~4.0"
    },     
    "autoload": {
        "psr-4" : {
            "igaster\\EloquentInheritance\\"        : "src/",
            "igaster\\EloquentInheritance\\Tests\\" : "tests/"            
        }
    },
    "minimum-stability": "stable"
}
